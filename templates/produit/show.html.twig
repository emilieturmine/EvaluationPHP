{% extends 'base.html.twig' %}

{% block title %}Details
{% endblock %}

{% block body %}
	<div class="container">

		<h1>Detail du Produit</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ produit.id }}</td>
				</tr>
				<tr>
					<th>Reference</th>
					<td>{{ produit.reference }}</td>
				</tr>
				<tr>
					<th>Libelle</th>
					<td>{{ produit.libelle }}</td>
				</tr>
				<tr>
					<th>Description</th>
					<td>{{ produit.description }}</td>
				</tr>
				<tr>
					<th>Prix</th>
					<td>{{ produit.prix }}</td>
				</tr>
				<tr>
					<th>Stock</th>
					<td>{{ produit.stock }}</td>
				</tr>
				<tr>
					<th>Couleur</th>
					<td>{{ produit.couleur }}</td>
				</tr>
				<tr>
					<th>Photo</th>
					<td>{{ produit.Photo }}</td>
				</tr>
				<tr>
					<th>Categorie</th>
					<td>{{ produit.Categorie }}</td>
				</tr>
				<tr>
					<th>DateAjout</th>
					<td>{{ produit.DateAjout ? produit.DateAjout|date('Y-m-d H:i:s') : '' }}</td>
				</tr>
			</tbody>
		</table>

		<a href="{{ path('produit_index') }}">Retour a liste</a>

		<a href="{{ path('produit_edit', {'id': produit.id}) }}">Modifier</a>

		{{ include('produit/_delete_form.html.twig') }}

	</div>
{% endblock %}
